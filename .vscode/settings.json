{
  // âš™ï¸ Default formatter & auto format
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ğŸ§  Jalankan ESLint dan perbaiki otomatis saat save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.addMissingImports": "explicit"
  },

  // ğŸ’… Konfigurasi Prettier
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.arrowParens": "always",

  // ğŸ’¡ Formatter per bahasa
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ğŸ”§ Path TypeScript (biar VSCode pakai versi lokal dari node_modules)
  "typescript.tsdk": "node_modules/typescript/lib",

  // ğŸ‘ï¸ Sembunyikan file yang gak penting di Explorer
  "files.exclude": {
    "**/node_modules": true,
    "next-env.d.ts": true
  },

  // ğŸ¨ Hindari error â€œunknown at ruleâ€ dari Tailwind atau CSS custom
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "less.lint.unknownAtRules": "ignore",
  "css.lint.unknownProperties": "ignore",

  // ğŸŒˆ Opsional: tampilkan warna inline di editor
  "editor.colorDecorators": true,

  // ğŸ§¹ Auto remove import tidak terpakai
  "editor.codeActionsOnSaveTimeout": 2000,

  // ğŸ’¬ Format file markdown juga
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
